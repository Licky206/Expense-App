@{
    ViewData["Title"] = "Create / Edit";
}

@model Expense_App.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or edit an Expense</h1>
</div>


<form>
    <label>Id</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Id" />

    <label class="nt-4">Value $</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.61" />
    
    <label class="nt-4">Description</label>
    <input class="form-control" type="text" placeholder="Add a description" asp-for="Description" />

    <button class="btn btn-primary nt-4" type="submit">Ok</button>


</form>